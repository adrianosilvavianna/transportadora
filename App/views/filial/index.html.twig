{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <a href="/user/filial/create"><i class="fa fa-plus"></i></a>
                <h3 class="box-title">Filiais</h3>

                <div class="box-tools">
                    <form action="/user/filial/search" method="post">
                        <div class="input-group input-group-sm" style="width: 350px;">
                            <input type="text" name="search" class="form-control pull-right" placeholder="Pesquise pelo CEP">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <form role="form">
                <div class="box-body">
                    <table class="table">
                        <thead>
                        <th>Endere√ßo</th>
                        <th>Numero</th>
                        <th>Complemento</th>
                        <th>Bairro</th>
                        <th>Cidade</th>
                        <th>CEP</th>
                        <th>#</th>
                        </thead>
                        <tbody>
                        {% for filial in filiais %}
                            <tr>
                                <td>{{ filial.logadouro}}</td>
                                <td>{{ filial.numero }}</td>
                                <td>{{ filial.complemento }}</td>
                                <td>{{ filial.bairro }}</td>
                                <td>{{ filial.cidade }}</td>
                                <td>{{ filial.cep }}</td>
                                <td>
                                    <a href="/user/filial/edit?id={{ filial.id }}"><i class="fa fa-edit"></i></a>
                                    <a href="/user/filial/delete?id={{ filial.id }}" class="text-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}

                        </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">

                </div>
            </form>
        </div>
    </div>


{% endblock %}