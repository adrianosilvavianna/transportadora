{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Motorista</h3>
            </div>

            <form class="form-horizontal" action="/user/motorista/update?id={{ motorista.id }}" method="post">
                <div class="box-body">
                    <input type="hidden" name="user_id" value="{{ auth().id }}">

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="" name="nome" value="{{ motorista.nome }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">CPF</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="Somente Numeros" maxlength="11" name="cpf" value="{{  motorista.cpf }}">
                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">RG</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="Somente Numeros" maxlength="10" name="rg" value="{{ motorista.rg }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">CNH</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" placeholder="" name="cnh" value="{{ motorista.cnh }}">
                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Categoria</label>
                        <div class="col-sm-4">
                            <select name="categoria_cnh" class="form-control">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="AB">AB</option>
                                <option value="C">D</option>
                                <option value="E">E</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">CEP</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="zip_code" placeholder="" name="cep" value="{{ motorista.cep }}">
                        </div>
                        <span class="input-group-btn ">
                            <button class="btn btn-success "   type="button" id="get_code">Consulta!</button>
                        </span>
                    </div>

                    <div id="control">
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Endere√ßo</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="address" placeholder="" name="logadouro" value="{{ motorista.logadouro }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Numero</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="number" placeholder="" name="numero" value="{{ motorista.numero }}">
                            </div>
                            <label for="inputPassword3" class="col-sm-2 control-label">Complemento</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="complement" placeholder="" name="complemento" value="{{  motorista.complemento }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Cidade</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="city" placeholder="" name="cidade" value="{{ motorista.cidade }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Bairro</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="district" placeholder="" name="bairro" value="{{ motorista.bairro }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">UF</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="state_abbr" placeholder="" name="uf" value="{{ motorista.uf }}">
                            </div>
                        </div>

                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">SALVAR</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

