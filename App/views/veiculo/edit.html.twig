{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Ve√≠culo</h3>
            </div>

            <form class="form-horizontal" action="/user/veiculo/update?id={{ veiculo.id }}" method="post">
                <div class="box-body">
                    <input type="hidden" name="user_id" value="{{ auth().id }}">

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Marca</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="" maxlength="11" name="marca" value="{{ veiculo.marca }}">
                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Modelo</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder= maxlength="10" name="modelo" value="{{  veiculo.modelo }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Ano</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" placeholder="" name="ano" value="{{ veiculo.ano }}">
                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Categoria</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="categoria" value="{{ veiculo.categoria }}">
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">SALVAR</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

