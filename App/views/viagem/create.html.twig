{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nova Viagem</h3>
            </div>

            <form class="form-horizontal" action="/user/viagem/store" method="post">
                <div class="box-body">
                    <input type="hidden" name="user_id" value="{{ auth().id }}">

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Data</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" name="data_partida">
                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Status</label>
                        <div class="col-sm-4">
                            <select name="status" class="form-control">
                                <option value="0">Pendente</option>
                                <option value="1">Despachado</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Filial</label>
                        <div class="col-sm-4">
                            <select name="filial_id" class="form-control">
                                {% for filial in filiais %}
                                    <option value="{{ filial.id }}">{{ filial.logadouro }} - {{ filial.numero }} , {{ filial.cidade }}</option>
                                {% endfor %}
                            </select>

                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Veiculo</label>
                        <div class="col-sm-4">
                            <select name="veiculo_id" class="form-control">
                                {% for veiculo in veiculos %}
                                    <option value="{{ veiculo.id }}">{{ veiculo.modelo }} | {{ veiculo.marca }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Motorista</label>
                        <div class="col-sm-4">
                            <select name="motorista_id" class="form-control">
                                {% for motorista in motoristas %}
                                    <option value="{{ motorista.id }}">{{ motorista.nome }} | CNH {{ motorista.cnh }} - {{ motorista.categoria_cnh }}</option>
                                {% endfor %}
                            </select>

                        </div>
                        <label for="inputPassword3" class="col-sm-1 control-label">Cliente</label>
                        <div class="col-sm-4">
                            <select name="client_id" class="form-control">
                                {% for cliente in clientes %}
                                    <option value="{{ cliente.id }}">{{ cliente.nome }} | CEP : {{ cliente.cep }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">SALVAR</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

