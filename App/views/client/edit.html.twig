{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Clientes</h3>
            </div>
            <form class="form-horizontal" action="/user/client/update?id={{ client.id }}" method="post">
                 <div class="box-body">
                     <input type="hidden" name="user_id" value="{{ auth().id }}">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmail3" placeholder="" required name="nome" value="{{ client.nome }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-2 control-label">CPF</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Somente números" required maxlength="11" name="cpf" value="{{ client.cpf }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-2 control-label">RG</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Somente números" required maxlength="10" name="rg" value="{{ client.rg }}">
                        </div>
                    </div>
                     <div class="form-group">
                         <label  class="col-sm-2 control-label">CEP</label>
                         <div class="col-sm-8">
                             <input type="text" class="form-control" id="zip_code" placeholder="" name="cep" value="{{ client.cep }}">
                         </div>
                        <span class="input-group-btn ">
                            <button class="btn btn-success "   type="button" id="get_code">Consulta!</button>
                        </span>
                     </div>

                     <div id="control">
                         <div class="form-group">
                             <label for="inputPassword3" class="col-sm-2 control-label">Endereço</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="address" placeholder="" name="logadouro" value="{{ client.logadouro }}">
                             </div>
                         </div>

                         <div class="form-group">
                             <label for="inputPassword3" class="col-sm-2 control-label">Numero</label>
                             <div class="col-sm-2">
                                 <input type="text" class="form-control" id="number" placeholder="" name="numero" value="{{ client.numero }}">
                             </div>
                             <label for="inputPassword3" class="col-sm-2 control-label">Complemento</label>
                             <div class="col-sm-6">
                                 <input type="text" class="form-control" id="complement" placeholder="" name="complemento" value="{{  client.complemento }}">
                             </div>
                         </div>

                         <div class="form-group">
                             <label for="inputPassword3" class="col-sm-2 control-label">Cidade</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="city" placeholder="" name="cidade" value="{{ client.cidade }}">
                             </div>
                         </div>

                         <div class="form-group">
                             <label for="inputPassword3" class="col-sm-2 control-label">Bairro</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="district" placeholder="" name="bairro" value="{{ client.bairro }}">
                             </div>
                         </div>

                         <div class="form-group">
                             <label for="inputPassword3" class="col-sm-2 control-label">UF</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="state_abbr" placeholder="" name="uf" value="{{ client.uf }}">
                             </div>
                         </div>

                     </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">SALVAR</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}