{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <a href="/user/client/create"><i class="fa fa-plus"></i></a>
                <h3 class="box-title">Clientes</h3>

                <div class="box-tools">
                    <form action="/user/client/search" method="post">
                        <div class="input-group input-group-sm" style="width: 350px;">
                            <input type="text" name="search" class="form-control pull-right" placeholder="Pesquise pelo NOME">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <form role="form">
                <div class="box-body">
                    <table class="table">
                        <thead>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>RG</th>
                        <th>Endere√ßo</th>
                        <th>Numero</th>
                        <th>CEP</th>
                        <th>#</th>
                        </thead>
                        <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.nome }}</td>
                                <td>{{ client.cpf }}</td>
                                <td>{{ client.rg }}</td>
                                <td>{{ client.logadouro }}</td>
                                <td>{{ client.numero }}</td>
                                <td>{{ client.cep }}</td>
                                <td>
                                    <a href="/user/client/edit?id={{ client.id }}"><i class="fa fa-edit"></i></a>
                                    <a href="/user/client/delete?id={{ client.id }}" class="text-danger"><i class="fa fa-trash"></i></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">

                </div>
            </form>
        </div>
    </div>

{% endblock %}