{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Novo Cliente</h3>
            </div>
            <form action="/user/client/store" method="post" class="form-horizontal">
                <div class="box-body">
                    <input type="hidden" name="user_id" value="{{ auth().id }}">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputEmail3" placeholder="" required name="nome" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-2 control-label">CPF</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Somente números" required maxlength="11" name="cpf">
                        </div>
                        <label for="inputtext3" class="col-sm-1 control-label">RG</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Somente números" required maxlength="10" name="rg">
                        </div>
                    </div>

                    {{ include(view('location._inputs')) }}

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">SALVAR</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}